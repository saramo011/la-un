<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/nav_bar" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical" >


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/feedback_page" />

            <TextView
                android:id="@+id/textView_nav_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                android:text="FEEDBACK &amp; SUPPORT" />
            
        </LinearLayout>

        <Button
            android:id="@+id/but_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/close_but" />

    </RelativeLayout>

   
    
   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:background="#FFFFFF" >
        
          <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="@string/feedback_text"
                android:textSize="13sp" />
          
          <Spinner
            android:id="@+id/spinner_subject"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:background="@drawable/dropdown"
            android:paddingRight="30dp" />
        
        
 <LinearLayout
        android:id="@+id/feedback_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customshape"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp" >

        <EditText
            android:id="@+id/editText_feedback_text"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:paddingLeft="10dp"
            android:background="#00000000"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="#000000"
   			 android:gravity="top|left"
    		android:inputType="textMultiLine"
    		android:scrollHorizontally="false" 
            android:imeOptions="flagNoEnterAction"
            android:textSize="14sp" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/submit_btn_feedback"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/big_red_but" 
        android:layout_gravity="center_horizontal"
        android:text="SUBMIT"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:textColor="#FFFFFF"
        
        />
    </LinearLayout>

</RelativeLayout>

