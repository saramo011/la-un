<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#FFFFFF"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/play_btn_id"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/ic_play" />

    <LinearLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
         >

        <ImageView
            android:id="@+id/share_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_share_list" />

        <ImageView
            android:id="@+id/container_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_container" />

        

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/right_layout"
        android:layout_toRightOf="@+id/play_btn_id"
        android:layout_marginRight="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/songName_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:text="Song Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/duration_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:47"
                android:textColor="#000000"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:background="#808080"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />

            <TextView
                android:id="@+id/artistName_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:text="Artist Name"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>
    <ImageView
            android:id="@+id/imageButton_delete"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/close_but"
            />

</RelativeLayout>