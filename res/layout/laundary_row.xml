<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/white_buttonstyle"
     >

     <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
             android:background="#00415b"
             android:visibility="gone" />
    
   
     <LinearLayout
        android:id="@+id/layout_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp" >

        <ImageView
            android:id="@+id/imageView_star1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/rating_before"
             />

        <ImageView
            android:id="@+id/imageView_star2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/rating_before"
             />

        <ImageView
            android:id="@+id/imageView_star3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/rating_before"
             />

        <ImageView
            android:id="@+id/imageView_star4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/rating_before"
             />

        <ImageView
            android:id="@+id/imageView_star5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/rating_before"
             />
    </LinearLayout>

    <Button
        android:id="@+id/imageView_num"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:text="1"
        android:focusable="false"
        android:visibility="gone"
		android:focusableInTouchMode="false"
        android:textColor="#000000"
        android:textSize="14sp" />
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/layout_star"
        android:layout_toRightOf="@+id/imageView_num"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_laundry_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
			android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
     		android:textAllCaps="true"
            android:layout_marginTop="4dp"
            android:text="Description"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="11sp" />
    </LinearLayout>

   

</RelativeLayout>