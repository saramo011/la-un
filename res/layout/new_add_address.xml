<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor" >

    <ImageView
        android:id="@+id/imageView_banner"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        android:background="@drawable/list_row_background1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView_banner"
        android:text="My Address"
        android:padding="10dp"
        android:textColor="@color/text_color"
        android:background="#d3d3d3"
        android:textAppearance="?android:attr/textAppearanceMedium" />

       <ListView
        android:id="@+id/listView_laundry1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:dividerHeight="2dp"
        android:divider="#00000000"
        android:layout_above="@+id/rel_bot_button"
        android:layout_below="@+id/textView1" >

    </ListView>
    
    <RelativeLayout
        android:id="@+id/rel_bot_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_alignParentBottom="true"
        android:background="#d3d3d3">

        <Button
            android:id="@+id/button1" 
            android:layout_width="fill_parent"
            android:layout_height="33dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/btn_bgcolor"
            android:layout_marginLeft="4dp"
             android:layout_marginRight="4dp"
             android:textColor="@color/white"
            android:text="Add Address" />

    </RelativeLayout>

</RelativeLayout>