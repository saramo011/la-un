<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#0c0c0c"
                android:endColor="#0c0c0c"
                android:angle="270" />
            
            <corners
                android:radius="2dp" />
            <padding
                android:left="2dp"
                android:top="0dp"
                android:right="2dp"
                android:bottom="0dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#0c0c0c"
                android:startColor="#0c0c0c"
                android:angle="270" />
            
            <corners
                android:radius="5dp" />
            <padding
                android:left="2dp"
                android:top="0dp"
                android:right="2dp"
                android:bottom="0dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#2e2e2e"
                android:startColor="#2e2e2e"
                android:angle="270" />
           
            <corners
                android:radius="2dp" />
            <padding
                android:left="2dp"
                android:top="0dp"
                android:right="2dp"
                android:bottom="0dp" />
        </shape>
    </item>

</selector>
